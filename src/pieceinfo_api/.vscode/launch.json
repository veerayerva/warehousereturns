{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Azure Functions: PieceInfo API",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/.venv/Scripts/func.exe",
            "args": [
                "host",
                "start",
                "--python"
            ],
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "FUNCTIONS_WORKER_RUNTIME": "python"
            },
            "console": "integratedTerminal",
            "justMyCode": false,
            "stopOnEntry": false,
            "serverReadyAction": {
                "pattern": "Host lock lease acquired by instance ID '([^']+)'.",
                "uriFormat": "http://localhost:7074/api/docs",
                "action": "openExternally"
            }
        },
        {
            "name": "Debug Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: Attach to Function",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 9091
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "."
                }
            ]
        }
    ]
}